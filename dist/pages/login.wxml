
  <view class="container">
    <view class="bg_mod">
      <image mode="widthFix" src="../images/bg_login.png" class="bg"/>
    </view>
    <view class="login_mode">
      <view class="title">
        用户登录
      </view>
      <view class="list">
        <view class="list-item">
          <input value="{{phone}}" bindinput="bindPhone" placeholder="请输入手机号码" placeholder-class=""/>
        </view>
        <view class="list-item">
          <input class="input_idCode" bindinput="bindIdCode" placeholder="请输入验证码" placeholder-class=""/>
          <view class="getIdCode">
            <view class="btn" bindtap="getIdCode">
              获取
              {{idCodeTime>0?'(':''}}
              {{idCodeTime>0?idCodeTime:''}}
              {{idCodeTime>0?')':''}}
            </view>
          </view>
        </view>
        <view class="list-item">
          <view class="btn" bindtap="login">
            登录
          </view>
        </view>
      </view>
    </view>
  </view>